target 'WaterMe' do
	platform :ios, '10.3'
	use_frameworks!
	
	pod 'FormatterKit', '~> 1.8.2'
	pod 'Result', '~> 3.2.2'
	pod 'RealmSwift'
	pod 'XCGLogger', '~> 6.0.1'
	pod 'TPInAppReceipt'
	pod 'WaterMeData', :path => 'WaterMeData'
	pod 'WaterMeStore', :path => 'WaterMeStore'
end

target 'AdminConsole' do
	platform :ios, '10.3'
	use_frameworks!
	
	pod 'Result', '~> 3.2.2'
	pod 'RealmSwift'
	pod 'XCGLogger', '~> 6.0.1'
	pod 'WaterMeData', :path => 'WaterMeData'
    pod 'WaterMeStore', :path => 'WaterMeStore'
end

target 'NoDeviceTests' do
	platform :ios, '10.3'
	use_frameworks!
    pod 'WaterMeData', :path => 'WaterMeData'
    pod 'WaterMeStore', :path => 'WaterMeStore'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '4.0'
    end
  end
end